// nonWF simple sexual Y.slim : ^Total mutation frequencies: (.*)$
//
// A test script for the simple Y chromosome case
//
initialize() {
	initializeSLiMModelType("nonWF");
	defineConstant("K", 1000);
	initializeSex('Y');
	initializeMutationRate(1e-6);
	initializeMutationType("m1", 0.5, "f", 0.0);
	m1.convertToSubstitution = T;
	
	initializeGenomicElementType("g1", m1, 1.0);
	initializeGenomicElement(g1, 0, 1e5-1);
	initializeRecombinationRate(1e-7);
}
reproduction(NULL, "F") {
	subpop.addCrossed(individual, p1.sampleIndividuals(1, sex="M"));
}
1 early() {
	sim.addSubpop("p1", 10);
}
early() {
	p1.fitnessScaling = K / p1.individualCount;
}
20000 late() { cat("\nTotal mutation frequencies: " + sum(sim.mutationFrequencies(NULL)) + "\n"); }
