// long chromosome.slim : ^Total mutation frequencies: (.*)$
//
// A test script with a very long chromosome
//
initialize() {
	initializeMutationRate(1e-16);
	initializeMutationType("m1", 0.5, "f", 0.0);
	initializeGenomicElementType("g1", m1, 1.0);
	initializeGenomicElement(g1, 0, 1e15-1);
	initializeRecombinationRate(1e-16);
}
1 early() {
	sim.addSubpop("p1", 1000);
}
20000 late() { cat("\nTotal mutation frequencies: " + sum(sim.mutationFrequencies(NULL)) + "\n"); }
